<div class="form-header new">
  <h3><%= t 'views.calendar_events.new.title' %></h3>
</div>
<div class="form-header edit">
  <h3><%= t 'views.calendar_events.edit.title' %></h3>
</div>
<%= simple_form_for(@calendar_event, remote: true, html: {role: :form, 'data-model' => 'calendar_event'}) do |f| %>

  <div class="form-inputs">
    <%= f.hidden_field :id %>
    <%= f.hidden_field :calendar_event_type_id, value: @calendar_event.calendar_event_type_id %>
    <div class="input-group">
      <div class="input">
        <%= f.input_field :starts_at_date, label: false %>
      </div>
      <div class="input">
        <%= f.input_field :starts_at_time, label: false %>
      </div> 
    </div>
    <div class="to">
      to
    </div>
    <div class="input-group">
      <div class="input">
        <%= f.input_field :ends_at_date, label: false %>
      </div>
      <div class="input">
        <%= f.input_field :ends_at_time, label: false %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Save" %>
    <%= link_to 'Delete', @calendar_event, :method => 'delete', confirm: 'Are you sure?', id: 'delete', class: 'delete button', remote: true %>
  </div>
<% end %>

