<%= simple_form_for(@provider) do |f| %>
  <%= f.input :name, placeholder: "Your full name.", label: false %>
  <%= f.input :email, placeholder: "Your email address.", label: false %>
  <%= f.input :zip_code, placeholder: "Zip code of your practice.", label: false %>
  <%= f.input :phone, placeholder: "Your phone number.", label: false %>
  <%= f.association :specialty, placeholder: "Choose your specialty.", label: false, :value_method => :id %>
  <%= f.button :submit, "Save" %>

<% end %>
